<h1>{{ title2 }}</h1>

<form name="Airport" method="post" action='/airport'>
  <div>
    <label for="Airport_code">Airport_code</label>
    <input id="Airport_code" name="Airport_code" type="text" required placeholder="Airport_code">
  </div>
  <div>
    <label for="Name">Name</label>
    <input id="Name" name="Name" type="text" required placeholder="Name">
  </div>
  <div>
    <label for="City">City</label>
    <input id="City" name="City" type="text" required placeholder="City">
  </div>
  <div>
    <label for="State">State</label>
    <input id="State" name="State" type="text" required placeholder="State">
  </div>
  <div>
    <label for="Manager">Manager</label>
    <input id="Manager" name="Manager" type="text" placeholder="Manager">
  </div>
  <div>
    <td style="border: none; margin-left: 10px;">
      <button type="submit"
      name='insertbtn'
      values="airport"
      formaction="/airport">
      삽입
      </button>
    </td>
  </div>
</form>

