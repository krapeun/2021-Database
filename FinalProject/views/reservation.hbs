<h1>{{ title }}</h1>
<table>
    <tr>
        <td>Flight_number</td>
        <td>Leg_number</td>
        <td>Airplane_id</td>
        <td>Date</td>
        <td>DName</td>
        <td>AName</td>
        <td>Departure_time</td>
        <td>Arrival_time</td>
        <td>Fare_code</td>
        <td>Restrictions</td>
        <td>Number_of_available_seats</td>
    </tr>
    {{#each Reservation_List}}
    <form method="post">
        <tr>
            <td>{{Flight_number}}</td>
            <td>{{Leg_number}}</td>
            <td>{{Airplane_id}}</td>
            <td>{{Date}}</td>
            <td>{{DName}}</td>
            <td>{{AName}}</td>
            <td>{{Departure_time}}</td>
            <td>{{Arrival_time}}</td>
            <td>{{Fare_code}}</td>
            <td>{{Restrictions}}</td>
            <td>{{Number_of_available_seats}}</td>
            <td style="border: none; margin-left: 10px;">
                <button 
                style="margin-left: 10px;"
                name='delBtn'
                type="submit"
                value="{{Flight_number}}"
                >
                선택 
                </button>
            </td>
        </tr>
    </form>
    {{/each}}
</table>

