<table>
  <tr>
    <td>Airport_code</td>
    <td>Name</td>
    <td>City</td>
    <td>State</td>
    <td>Manager</td>
  </tr>
  {{#each Airport}}
  <form method="post">
    <tr>
      <td>{{Airport_code}}</td>
      <td>{{Name}}</td>
      <td>{{City}}</td>
      <td>{{State}}</td>
      <td>{{Manager}}</td>

      <td style="border: none; margin-left: 10px;">
        <button 
        style="margin-left: 10px;"
        name='deletebtn'
        type="submit"
        value="{{Airport_code}}"
        formaction="/airport">
        삭제
        </button>
      </td>

    </tr>
  </form>
  {{/each}}
</table>

